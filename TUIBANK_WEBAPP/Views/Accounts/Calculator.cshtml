<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Account Information</h3>
            <form>
                <div class="form-group">
                    <label for="#accountnumber">Account number</label>
                    <input type="text" id="accountnumber" placeholder="Account Number" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="#accountbalance">Account Balance</label>
                    <input type="number" id="accountbalance" placeholder="Account Balance" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="#accountperiod">Account Period</label>
                    <input type="number" id="accountperiod" placeholder="Account Period" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="#accountinterest">Account Interest</label>
                    <input type="number" step=0.01 id="accountinterest" placeholder="Account Interest" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="#accountstartdate">Account Startdate</label>
                    <input type="text" id="accountstartdate" placeholder="Account Startdate" class="form-control" />
                </div>
            </form>
            <div class="btn-block">
                <button class="btn btn-border-black" id="btnFind">Find</button>
                <button class="btn btn-border-black" id="btnCalculate">Calculate</button>
            </div>
        </div>
        <div class="col-sm-6">
            <h3>Calculated Information</h3>
            <table id="table-calculator" class="table">
                <thead>
                    <tr>
                        <th>Time of period</th>
                        <th>Balance</th>
                        <th>Interest</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/calculator.js"></script>