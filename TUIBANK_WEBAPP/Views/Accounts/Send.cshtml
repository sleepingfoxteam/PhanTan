@model IEnumerable<TUIBANK_WEBAPP.Models.View_Customer_Account>
@{
    ViewBag.Title = "Send";
}

<h2>Send</h2>
<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <form>
                <div class="form-group">
                    <label for="#sourcename">Sender</label>
                    <input id="sourcename" name="sourcename" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="#sourcenumber">Sender Number</label>
                    <input id="sourcenumber" name="sourcenumber" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="#sourcemoney">Money</label>
                    <input id="sourcemoney" name="sourcemoney" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="#sourcebranch">Sender Branch</label>
                    <input id="sourcebranch" name="sourcebranch" type="text" class="form-control" />
                </div>
                <button class="btn btn-border-black" id="btnFindSender" type="button" role="button">Find</button>
            </form>
        </div>
        <div class="col-sm-6">
            <form>
                <div class="form-group">
                    <label for="#destinationname">Reciver</label>
                    <input id="destinationname" name="destinationname" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="#desitnationnumber">Reciver Number</label>
                    <input id="desitnationnumber" name="desitnationnumber" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="#desitnationbranch">Reciver Branch</label>
                    <input id="desitnationbranch" name="desitnationbranch" type="text" class="form-control" />
                </div>
                <div class="btn-group">
                    <button class="btn btn-border-black" id="btnFindReciver" type="button">Find</button>
                    <button class="btn btn-border-black" id="btnSendMoney" type="button">Send</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/sendMoney.js"></script>

